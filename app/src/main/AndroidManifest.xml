<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.danceit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ReceivedSearchActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".PublicSearchActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".TagManagement.TagManagementActivity"
            android:label="@string/title_activity_tag_management" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity android:name=".Sharing.SharingVideoActivity" />
        <activity android:name=".ui.login.RegisterActivity" />
        <activity android:name=".Youube.MainYoutube" />
        <activity
            android:noHistory="true"
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LibrarySearchActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddVideoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddTagActivity"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".StartUP">
            android:noHistory="true"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>